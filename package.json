  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260108.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
